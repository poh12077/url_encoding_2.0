package com.solbox.nana;

//import org.json.simple.JSONArray;
//import org.json.simple.JSONObject;

public class Main {
	public static void main(String[] args) {
		try {
			
			String url = "a/b/c/d/fileName";
			String key = "abcdefghi";
			int timeout = 3;
			int skipDepth = 1;
			int exceptFile = 1;
			byte[] cipherKey;
			Facilities facilities = new Facilities();
			
			//json
			//JSONObject json = new JSONObject();
			//json = facilities.jsonGenerator(url, timeout, skipDepth, exceptFile);
			//String jsonString = json.toString();
			//String jsonString = json.toJSONString();
			
			DataSet dataSet = facilities.inputParser(url, timeout, skipDepth, exceptFile);

			SHA256 sha256 = new SHA256();
			cipherKey = sha256.encrypt(key);

			AES256 aes256 = new AES256();
			String cipherText = aes256.encrypt(dataSet.jsonString, cipherKey);

			facilities.printResult(cipherText, dataSet);
		} catch (Exception e) {
			e.printStackTrace();
		}
		
	}
}
